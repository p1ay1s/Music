<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <com.p1ay1s.base.ui.FragmentHostView
            android:id="@+id/fragmentHostView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bar"
            app:behavior_hideable="false"
            app:layout_behavior="@string/bottom_sheet_behavior">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/contrast_transparent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/miniPlayer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/smallSongName"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:ellipsize="marquee"
                    android:gravity="start|center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/contrast"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/smallPlay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.7" />

                <ImageView
                    android:id="@+id/smallPlay"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:clickable="true"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_play"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/smallNext"
                    app:layout_constraintStart_toEndOf="@id/smallSongName"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/contrast" />

                <ImageView
                    android:id="@+id/smallNext"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_next"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/smallPlay"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/contrast" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView
                android:id="@+id/cover"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/songName"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:autoSizeTextType="uniform"
                android:ellipsize="marquee"
                android:gravity="start"
                android:maxLines="1"
                android:paddingHorizontal="20dp"
                android:textColor="#a0ffffff"
                app:layout_constraintEnd_toEndOf="@id/seekBar"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintStart_toStartOf="@id/seekBar"
                app:layout_constraintTop_toBottomOf="@id/cover" />

            <TextView
                android:id="@+id/singerName"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:autoSizeTextType="uniform"
                android:ellipsize="marquee"
                android:gravity="start"
                android:maxLines="1"
                android:paddingHorizontal="20dp"
                android:textColor="#50ffffff"
                app:layout_constraintEnd_toEndOf="@id/seekBar"
                app:layout_constraintHeight_percent="0.04"
                app:layout_constraintStart_toStartOf="@id/seekBar"
                app:layout_constraintTop_toBottomOf="@id/songName" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginVertical="8dp"
                android:background="@null"
                android:progressDrawable="@drawable/seek_bar"
                android:thumb="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/singerName"
                app:layout_constraintWidth_percent="0.9" />

            <TextView
                android:id="@+id/current"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="start"
                android:maxLines="1"
                android:paddingHorizontal="20dp"
                android:textColor="#50ffffff"
                android:textSize="14sp"
                app:layout_constraintHeight_percent="0.03"
                app:layout_constraintStart_toStartOf="@id/seekBar"
                app:layout_constraintTop_toBottomOf="@id/seekBar" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:ellipsize="marquee"
                android:gravity="end"
                android:maxLines="1"
                android:paddingHorizontal="20dp"
                android:textColor="#50ffffff"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/seekBar"
                app:layout_constraintHeight_percent="0.03"
                app:layout_constraintTop_toBottomOf="@id/seekBar" />

            <com.niki.music.ui.button.PreviousButton
                android:id="@+id/previous"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingVertical="5dp"
                app:layout_constraintBottom_toBottomOf="@id/play"
                app:layout_constraintEnd_toStartOf="@id/play"
                app:layout_constraintStart_toStartOf="@id/current"
                app:layout_constraintTop_toTopOf="@id/play"
                app:tint="#a0ffffff" />

            <com.niki.music.ui.button.PlayButton
                android:id="@+id/play"
                android:layout_width="0dp"
                android:layout_height="70dp"
                app:layout_constraintBottom_toTopOf="@id/playMode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seekBar"
                app:tint="#a0ffffff" />

            <com.niki.music.ui.button.NextButton
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingVertical="5dp"
                app:layout_constraintBottom_toBottomOf="@id/play"
                app:layout_constraintEnd_toEndOf="@id/total"
                app:layout_constraintStart_toEndOf="@id/play"
                app:layout_constraintTop_toTopOf="@id/play"
                app:tint="#a0ffffff" />


            <com.niki.music.ui.button.PlayModeButton
                android:id="@+id/playMode"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="#a0ffffff" />

            <ImageView
                android:id="@+id/playlist"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_list"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="#a0ffffff" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/contrast_transparent" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:background="@color/bar"
            app:itemActiveIndicatorStyle="@null"
            app:itemIconTint="@color/bottom_nav_color"
            app:itemRippleColor="@android:color/transparent"
            app:itemTextColor="@color/bottom_nav_color"
            app:labelVisibilityMode="selected"
            app:menu="@menu/menu_main" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>